<div class="row">
  <div class="span12 index-container">
    <%= semantic_form_for @plasmid, :html => { :multipart => true } do |f| %>
      <%= f.semantic_errors %>
       <div class="form-well-box">
        <div class="form-well-title">
          <span class="icon"><i class="icon-th-list"></i></span>
          <h5>New Plasmid entry</h5>
          <div class="buttons">
            <%= link_to icon("Back to Index", :list, :white), plasmids_path, :class => "btn btn-mini btn-primary" %>
          </div>
          <div class="buttons">

            <%= link_to_submit( class: "btn btn-mini btn-success" ) do %>
              <i class="icon-thumbs-up icon-white"></i> Save changes
            <% end %>
          </div>
        </div>

        <div class="form-well-content">
          <%= f.inputs do %>

          <div class="row">
            <div class="span2">
              <%= f.input :internal_id, :hint => "Autogenerated ID", :input_html => { :disabled => true, :class => "input-mini" } %>
            </div>

            <div class="span3">
              <%= f.input :name, :hint => "Enter the Plasmid name" %>
            </div>

            <div class="span3">
              <%= f.input :backbone, :hint => "Enter backbone information" %>
            </div>

            <div class="span3">
              <%= f.input :gene_insert, :hint => "Enter Gene/Insert information", :input_html => { :style => "width:100%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span2">
              <%= f.input :promoter, :hint => "Enter promoter name", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span3">
              <%= f.input :species, :hint => "Select the correct species" %>
            </div>

            <div class="span3">
              <%= f.input :dna_concentration, :hint => "Specify DNA Concentration" %>
            </div>

            <div class="span3">
              <%= f.input :mutations_deletions, :hint => "Enter Mutation/Deletion information", :input_html => { :style => "width:100%;" }%>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span2">
              <%= f.input :tag_1, :hint => "Enter Tag1", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span4">
              <%= f.input :location_of_tag_1, :hint => "Specify location of Tag1", :input_html => { :style => "width:75%;" } %>
            </div>

            <div class="span2">
              <%= f.input :tag_2, :hint => "Enter Tag2", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span3">
              <%= f.input :location_of_tag_2, :hint => "Specify location of Tag2", :input_html => { :style => "width:100%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span3">
              <%= f.input :bacterial_resistance, :hint => "Enter bacterial resistance" %>
            </div>

            <div class="span3">
              <%= f.input :bacterial_resistance_other, :hint => "Addtional information" %>
            </div>

            <div class="span3">
              <%= f.input :selectable_marker, :hint => "Specify selectable marker" %>
            </div>

            <div class="span2">
              <%= f.input :selectable_marker_other, :hint => "Additional information", :input_html => { :style => "width:100%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span5">
              <%= f.input :reference, :hint => "Specify reference", :input_html => { :style => "width:75%;"} %>
            </div>

            <div class="span4">
              <%= f.input :source, :hint => "Enter source information", :input_html => { :style => "width:83%;"} %>
            </div>

            <div class="span2">
              <%= f.input :source_specify, :hint => "Additional information", :input_html => { :style => "width:100%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span7">
              <%= f.input :special_growth_conditions, :hint => "Specify growth conditions", :input_html => { :style => "width:90%;"} %>
            </div>

            <div class="span3">
              <%= f.input :plasmid_map, :hint => "Attach the log file." %>
            </div>
          </div>

          <HR>
          <%= f.semantic_fields_for :attachments do |s| %>
            <% if s.object.new_record? %>
              <% s.file_field :file %>
            <% end %>
          <% end %>

          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
