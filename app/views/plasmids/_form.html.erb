<div class="row">
  <div class="span12 index-container new-plasmid">
    <%= semantic_form_for @plasmid, :html => { :multipart => true } do |f| %>
      <%= f.semantic_errors *f.object.errors.keys %>
       <div class="form-well-box">
        <div class="form-well-title">
          <span class="icon"><i class="icon-th-list"></i></span>
          <h5>New Plasmid entry</h5>
          <div class="buttons">
            <%= link_to icon("Back to Index", :list, :white), plasmids_path, :class => "btn btn-mini btn-primary" %>
          </div>
          <div class="buttons">

            <%= link_to_submit( class: "btn btn-mini btn-success" ) do %>
              <i class="icon-thumbs-up icon-white"></i> Save changes
            <% end %>
          </div>
        </div>

        <div class="form-well-content">
          <%= f.inputs do %>

          <div class="row">
            <div class="span2">
              <%= f.input :internal_id, :hint => "Autogenerated ID", :input_html => { :disabled => true, :class => "input-mini" } %>
            </div>

            <div class="span3">
              <%= f.input :name, :hint => "Enter the Plasmid name" %>
            </div>

            <div class="span3">
              <%= f.input :backbone, :hint => "(e.g. PacMan, GLKD1)" %>
            </div>

            <div class="span3">
              <%= f.input :gene_insert, :hint => "(e.g. CG2183, bTub85D_EGFP)", :input_html => { :style => "width:93%;" }, :wrapper_html => { :style => "width:125%;" }  %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span2">
              <%= f.input :promoter, :hint => "(e.g. act5c, nos)", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span3">
              <%= f.input :species, :hint => "(e.g. Drosophila melanogaster )" %>
            </div>

            <div class="span3">
              <%= f.input :dna_concentration, :hint => "(e.g. 22g/ml)" %>
            </div>

            <div class="span3">
              <%= f.input :mutations_deletions, :hint => "Enter Mutation/Deletion information", :input_html => { :style => "width:93%;" }, :wrapper_html => { :style => "width:125%;" }%>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span2">
              <%= f.input :tag_1, :hint => "(e.g. GST, 6xHis)", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span4">
              <%= f.input :location_of_tag_1, :hint => "(e.g. 'N terminal on backbone')", :input_html => { :style => "width:75%;" } %>
            </div>

            <div class="span2">
              <%= f.input :tag_2, :hint => "(e.g. GST, 6xHis)", :input_html => { :class => "input-small" } %>
            </div>

            <div class="span3">
              <%= f.input :location_of_tag_2, :hint => "(e.g. 'C terminal on backbone')", :input_html => { :style => "width:93%;" }, :wrapper_html => { :style => "width:125%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span3">
              <%= f.input :bacterial_resistance, :hint => "(e.g. Ampicillin )" %>
            </div>

            <div class="span3">
              <%= f.input :bacterial_resistance_other, :hint => "(e.g. Kanamycin)" %>
            </div>

            <div class="span3">
              <%= f.input :selectable_marker, :hint => "(e.g. Neomycin)" %>
            </div>

            <div class="span2">
              <%= f.input :selectable_marker_other, :hint => "(e.g. 'mini white')", :input_html => { :style => "width:100%;" }, :wrapper_html => { :style => "width:125%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span4">
              <%= f.input :glycerol_stock, :hint => "Glycerol stock", :input_html => { :style => "width:75%;"} %>
            </div>

            <div class="span4">
              <%= f.input :source, :hint => "(e.g. Created in Lab, Gift)", :input_html => { :style => "width:83%;"} %>
            </div>

            <div class="span3">
              <%= f.input :source_specify, :hint => "(e.g. Siomi Lab, DGRC)", :input_html => { :style => "width:93%;" }, :wrapper_html => { :style => "width:125%;" } %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span7">
              <%= f.input :special_growth_conditions, :hint => "Specify growth conditions", :input_html => { :style => "width:90%;"} %>
            </div>

            <div class="span3">
              <%= f.input :plasmid_map, :hint => "Attach image in png format" %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span12">
              <%= f.input :reference, :as => :text, :hint => "", :input_html => { :style => "width:95%;height:200px;"}, :placeholder => "e.g. Site-specific gene integration in cultured silkworm cells mediated by uC31 integrase Mol Gen Genomics (2006)" %>
            </div>
          </div>

          <HR>

          <div class="row">
            <div class="span12">
              <%= f.input :notes, :hint => "Misc notes", :input_html => { :style => "width:95%;height:200px;"} %>
            </div>
          </div>

          <HR>

          <div class="row">
            <label class="control-label additional-attachment-label">Additional attachments</label>
          <%= f.semantic_fields_for :attachments do |s| %>
            <% if s.object.new_record? %>
              <div class="span4">
                <%= s.file_field :file %>
              </div>
            <% end %>
          <% end %>
            <span class="help-block additional-attachment-info">Attach up to 3 files (e.g. SeqBuilder files)</span>
          </div>

          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
